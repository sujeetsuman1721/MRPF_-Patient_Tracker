@model Patient_Tracker.Models.DTOs.Facilities

@{
    ViewData["Title"] = "AddFacility";
}

<h3 style="text-align:center; margin-top:20px;">Add Facility For The Appointment Id  @ViewBag.Id</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFacility">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



            <div class="form-group">

                <input asp-for="AppointmentId" value=@ViewBag.Id type="hidden" />

                <span asp-validation-for="AppointmentId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="ConsultationId" class="control-label">Purpose</label>
                <select asp-for="ConsultationId" class="form-control" asp-items="@ViewBag.ConsultationPurpose"></select>
                <span asp-validation-for="ConsultationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomId" class="control-label">Room Type</label>
                <select asp-for="RoomId" class="form-control" asp-items="@ViewBag.RoomDetails"></select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LabTestId" class="control-label">LabTest Name</label>
                <select asp-for="LabTestId" class="form-control" asp-items="@ViewBag.Labtests"></select>
                <span asp-validation-for="LabTestId" class="text-danger"></span>
            </div>
            <div class="row">
            <div class="form-group m-3">
                <input type="submit" value="Update" class="btn btn-secondary" />
            </div>

            <div class="form-group m-3" style="float:right">
                <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary"><b>Admin Dashboard</b></a>
            </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
