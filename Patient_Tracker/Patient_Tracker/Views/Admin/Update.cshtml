@model Patient_Tracker.Models.DTOs.Facilities

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>Services</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label">PatientName</label>
                <select asp-for="PatientId" class="form-control" asp-items="@ViewBag.patientList" ></select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorId" class="control-label">DoctorName</label>
                <select asp-for="DoctorId" class="form-control" asp-items="@ViewBag.DoctorList"></select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConsultationId" class="control-label">Purpose</label>
                <select asp-for="ConsultationId" class="form-control" asp-items="@ViewBag.ConsultationPurpose"></select>
                <span asp-validation-for="ConsultationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomId" class="control-label">RoomType</label>
                <select asp-for="RoomId" class="form-control" asp-items="@ViewBag.RoomDetails"></select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LabTestId" class="control-label">LabTestName</label>
                <select asp-for="LabTestId" class="form-control" asp-items="@ViewBag.Labtests"></select>
                <span asp-validation-for="LabTestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
